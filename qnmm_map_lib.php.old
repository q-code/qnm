function QTgetx($str=null)
{
  if ( !is_string($str) ) return 0.0;
  $arr = explode(',',$str);
  if ( count($arr)!=2 ) return 0.0;
  $str = trim($arr[1]);
  if ( !is_numeric($str) ) return 0.0;
  Return floatval($str);
}
function QTgety($str=null)
{
  if ( !is_string($str) ) return 0.0;
  $arr = explode(',',$str);
  if ( count($arr)!=2 ) return 0.0;
  $str = trim($arr[0]);
  if ( !is_numeric($str) ) return 0.0;
  Return floatval($str);
}

