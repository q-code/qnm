// QTgempty
// Return true when $i is empty or a value starting with '0.000000'

function QTgempty($i)
{
  if ( empty($i) ) return true;
  if ( !is_string($i) && !is_float($i) && !is_int($i) ) die('QTgempty: Invalid argument #1');
  if ( substr((string)$i,0,8)=='0.000000' ) return true;
  return false;  
}

